generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id    Int     @id @default(autoincrement())
  title String  @db.VarChar(150)
  body  String? @db.Text
  imgs  PostImg[]
  tags TagsOnPosts[]

  @@map(name: "post")
}

model Project {
  id    Int     @id @default(autoincrement())
  title String  @db.VarChar(150)
  des   String? @db.Text
  body  String? @db.Text
  imgs  ProjectImg[]

  @@map(name: "project")
}

model ProjectImg {
  id Int @id @default(autoincrement())
  parentId Int
  parent Project @relation(fields: [parentId], references: [id])
  location String  @db.VarChar(150)

  @@map(name: "projectImg")
}

model PostImg {
  id Int @id @default(autoincrement())
  parentId Int
  parent Post @relation(fields: [parentId], references: [id])
  location String  @db.VarChar(150)

  @@map(name: "postImg")
}

model Tag {
  id Int @id @default(autoincrement()) 
  tag String  @db.VarChar(150) 
  posts TagsOnPosts[]
  
  @@unique([id, tag])
  @@map(name: "tag")
}

model TagsOnPosts {
  post Post @relation(fields: [postId], references: [id])
  postId Int
  tag Tag @relation(fields: [tagId, tagName], references: [id, tag])
  tagId Int
  tagName String 
  @@id( tagName)
}
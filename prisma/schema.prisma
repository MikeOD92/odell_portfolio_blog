generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id    Int     @id @default(autoincrement())
  title String  @db.VarChar(150)
  des String? @db.Text
  body  String? @db.Text
  body1  String? @db.Text
  body2  String? @db.Text
  body3  String? @db.Text
  body4 String? @db.Text
  imgs PostImg[]
  tags Tag[]
  createdAt DateTime?  @default(now())

  @@map(name: "post")
}

model Project {
  id    Int     @id @default(autoincrement())
  title String  @db.VarChar(150)
  des   String? @db.Text
  body  String? @db.Text
  imgs  ProjectImg[]

  @@map(name: "project")
}

model ProjectImg {
  id Int @id @default(autoincrement())
  parentId Int
  parent Project @relation(fields: [parentId], references: [id])
  location String  @db.VarChar(150)

  @@map(name: "projectImg")
}

model PostImg {
  id Int @id @default(autoincrement())
  parentId Int
  parent Post @relation(fields: [parentId], references: [id])
  location String  @db.VarChar(150)

  @@map(name: "postImg")
}

model Tag {
  id Int @id @default(autoincrement()) 
  tag String  @db.VarChar(150) 
  parentId Int
  posts Post @relation( fields: [parentId], references: [id])

  
  @@unique([id])
  @@map(name: "tag")
}

